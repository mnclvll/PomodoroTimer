<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fontFamily="@font/bebas_neue"
        android:text="POMODORO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp">
        <!-- app:layout_constraintLeft_toLeftOf="parent" -->
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIMER FOR WORK"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp">
    </TextView>

    <TextView
        android:id="@+id/txtWorkTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btnStartWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:text="START"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnPauseWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="PAUSE"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnResetWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="RESET"
            android:textColor="@color/black">
        </Button>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIMER FOR BREAK"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp">
    </TextView>

    <TextView
        android:id="@+id/txtBreakTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:00"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btnStartBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:text="START"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnPauseBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="PAUSE"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnResetBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="RESET"
            android:textColor="@color/black">
        </Button>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIMER FOR LONG BREAK"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp">
    </TextView>

    <TextView
        android:id="@+id/txtLongBreakTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btnStartLongBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gold"
            android:text="START"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnPauseLongBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="PAUSE"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/btnResetLongBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/gold"
            android:text="RESET"
            android:textColor="@color/black">
        </Button>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="@color/gold"
            android:textColor="@color/black">
        </Button>

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/gold"
            android:textColor="@color/black">
        </Button>

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/gold"
            android:textColor="@color/black">
        </Button>

    </LinearLayout>

</LinearLayout>